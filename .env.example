# ==================================================
# LOSTIFY ENVIRONMENT CONFIGURATION
# ==================================================

# --------------------------------------------------
# REQUIRED SECRETS
# --------------------------------------------------

# Admin Account Credentials
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_secure_password_here
ADMIN_EMAIL=admin@sst.scaler.com

# JWT Secret (generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))")
JWT_SECRET=your_jwt_secret_here

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id_here.apps.googleusercontent.com

# --------------------------------------------------
# OPTIONAL CONFIGURATION
# --------------------------------------------------

# Server Port
PORT=5000

# Database Path (for production with persistent disk)
# Development: defaults to backend/database/lostify.db
# Production: set to persistent disk path, e.g., /var/data/lostify.db
# DATABASE_PATH=/var/data/lostify.db
